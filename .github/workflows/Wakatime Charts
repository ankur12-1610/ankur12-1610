name: Wakatime Charts

on:
  workflow_dispatch:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main
  schedule:
    - cron: "0 0 * * *"

jobs:
  update-charts:
    name: Update wakatime stats charts
    runs-on: ubuntu-latest
    steps:
      - uses: divykj/wakatime-charts@master
        with:
          WAKATIME_API_KEY: ${{ secrets.WAKATIME_API_KEY }}
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }} # only required if using the action in repository other than profile
          IMAGES_FOLDER: "images"
          COMMIT_MESSAGE: "âœ…"
          BRANCH_NAME: "main"
          GIT_USER_EMAIL: "anknerd.12@gmail.com"
          GIT_USER_NAME: "ankur12-1610"     
           
